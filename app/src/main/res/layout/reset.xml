<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/level_up_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightLime"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/reset_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/antic_slab"
            android:text="You reached level 5."
            android:textAlignment="center"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/level_up_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/kid_four" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/reset_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/darkerRed"
                android:fontFamily="@font/antic_slab"
                android:text="Yes" />

            <Button
                android:id="@+id/cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/darkerLime"
                android:fontFamily="@font/antic_slab"
                android:text="NO" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>